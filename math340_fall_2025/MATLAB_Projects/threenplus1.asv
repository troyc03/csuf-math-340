function threenplus1(n)
% Initialize the sequence array
sequence = n;
    while n ~= 1
        if mod(n, 2) == 0
            n = n/2;
        else
            n = 3*n + 1;
        end
        sequence(end + 1) = n;
    end
    
% Plot sequence 
plot(sequence, '-o');
title(['3n + 1']);
xlabel('Step');
ylabel('Value');
grid on;



